<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#2E9AFE"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.naomitaub.standuptest.LoginActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <EditText android:id="@+id/email" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:hint="@string/prompt_email"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textSize="23sp"
            android:background="#A9D0F5"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="26dp" />

        <EditText android:id="@+id/password" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:hint="@string/prompt_password"
            android:background="#A9D0F5"
            android:textSize="23sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:imeOptions="actionUnspecified" android:inputType="textPassword"
            android:maxLines="1" android:singleLine="true"
            android:layout_gravity="start|center_vertical"
            android:layout_marginTop="45dp"
            android:layout_alignTop="@+id/email"
            android:layout_alignParentStart="true" />

        <Button android:id="@+id/email_sign_in_button" style="?android:textAppearanceSmall"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="#58ACFA"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="@string/sign_in"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_below="@+id/password"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp" />



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:background="#58ACFA"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textAllCaps="false"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal|bottom"
            android:onClick="launchCreateAccount"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/email_sign_in_button"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Info"
            android:background="#58ACFA"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:textSize="15sp"
            android:gravity="center"
            android:id="@+id/enterInfoButtonLogin"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:layout_weight="4.10"
            android:layout_marginTop="41dp"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:id="@+id/textView"
            android:textSize="45sp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


</LinearLayout>



