<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#2E9AFE"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.naomitaub.standuptest.CreateAccountActivity">

    <!-- Login progress -->
    <ProgressBar android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone" />

    <ScrollView android:id="@+id/login_form" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">



            <LinearLayout android:id="@+id/email_login_form" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical"
                android:weightSum="1"
                android:layout_weight="4.50">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <AutoCompleteTextView android:id="@+id/createAccountEmail" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:hint="@string/prompt_email"
            android:inputType="textEmailAddress" android:maxLines="1"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="23sp"
            android:background="#A9D0F5"
            android:layout_marginTop="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText android:id="@+id/createAccountPassword" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:hint="@string/prompt_password"
            android:background="#A9D0F5"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="23sp"
            android:layout_marginTop="45dp"
            android:maxLines="1" android:singleLine="true"
            android:layout_alignTop="@+id/createAccountEmail"
            android:layout_alignParentStart="true" />

        <Button android:id="@+id/createAccountButton" style="?android:textAppearanceSmall"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="#58ACFA"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="@string/register"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Info"
            android:background="#58ACFA"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:textSize="15sp"
            android:gravity="center"
            android:id="@+id/enterInfoButton"
            android:textAllCaps="false"
            android:onClick="launchEnterInfo"
            android:layout_gravity="center_horizontal"
            android:layout_weight="4.10"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/createAccountButton"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_account"
            android:id="@+id/textView"
            android:textSize="50sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:gravity="center"/>
    </RelativeLayout>

</LinearLayout>



