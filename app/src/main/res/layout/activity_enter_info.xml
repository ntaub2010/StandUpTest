<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:http="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#2E9AFE"
    tools:context="com.naomitaub.standuptest.EnterInfoActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="First Name"
        android:id="@+id/firstNameTextView"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Birthdate"
        android:id="@+id/birthdateTextView"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/firstNameText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gender"
        android:id="@+id/genderTextView"
        android:layout_above="@+id/radioGroup"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/firstNameText"
        android:layout_below="@+id/firstNameTextView"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/ageTextView" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/continueToTestsButton"
        android:layout_alignEnd="@+id/ageText"
        android:layout_toEndOf="@+id/firstNameTextView"
        android:layout_alignStart="@+id/birthdateTextView">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:id="@+id/genderFemaleButton"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:id="@+id/genderMaleButton"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other"
            android:id="@+id/genderOtherButton"
            android:checked="false" />

    </RadioGroup>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue to Tests"
        android:textAllCaps="false"
        android:id="@+id/continueToTestsButton"
        android:background="#58ACFA"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/genderTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/birthdateText"
        android:layout_below="@+id/birthdateTextView"
        android:layout_alignStart="@+id/ageText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Age"
        android:id="@+id/ageTextView"
        android:layout_marginTop="39dp"
        android:layout_above="@+id/ageText"
        android:layout_centerHorizontal="true" />

    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/ageText"
        android:layout_above="@id/genderTextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Last Name"
        android:id="@+id/lastNameTextView"
        android:layout_above="@+id/lastNameText"
        android:layout_alignEnd="@+id/continueToTestsButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/lastNameText"
        android:layout_above="@+id/birthdateTextView"
        android:layout_alignEnd="@+id/lastNameTextView"
        android:layout_toEndOf="@+id/birthdateTextView" />

    <Button
        android:background="#58ACFA"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Info"
        android:id="@+id/saveInfoButton"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/radioGroup" />


</RelativeLayout>
