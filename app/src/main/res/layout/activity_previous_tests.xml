<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.naomitaub.standuptest.PreviousTestsActivity"
    android:background="#2E9AFE">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Previous Tests"
        android:id="@+id/previousTestsBanner"
        android:background="#0174DF"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Test 1\nDate: 3/8/2015\nTime: 5:51 PM"
        android:id="@+id/sampleTest1Button"
        android:background="#58ACFA"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/previousTestsBanner"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Test 2\nDate: 3/8/2015\nTime: 7:56 PM"
        android:id="@+id/sampleTest2Button"
        android:background="#58ACFA"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:gravity="center"
        android:layout_below="@+id/sampleTest1Button"
        android:layout_alignStart="@+id/sampleTest1Button"
        android:layout_marginTop="59dp" />
</RelativeLayout>
