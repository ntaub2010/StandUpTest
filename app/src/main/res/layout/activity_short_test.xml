<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.naomitaub.standuptest.ShortTestActivity"
    android:background="#2E9AFE">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:background="#58ACFA"
        android:textAllCaps="false"
        android:id="@+id/startTimerButtonShort"
        android:layout_below="@+id/textViewTimeShort"
        android:layout_toStartOf="@+id/bmpShort"
        android:layout_marginTop="31dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:background="#58ACFA"
        android:textAllCaps="false"
        android:id="@+id/stopTimerButtonShort"
        android:layout_alignTop="@+id/startTimerButtonShort"
        android:layout_toEndOf="@+id/bmpShort" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewTimeShort"
        android:textSize="25sp"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/bmpShort"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Short Test"
        android:textSize="35sp"
        android:id="@+id/shortTestBanner"
        android:textAlignment="center"
        android:layout_marginTop="43dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="89"
        android:textSize="30sp"
        android:textAlignment="center"
        android:ems="2"
        android:id="@+id/bmpShort"
        android:layout_gravity="center"
        android:layout_marginTop="104dp"
        android:layout_below="@+id/shortTestBanner"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heartRateEditTextShort"
        android:textSize="25sp"
        android:layout_alignBottom="@+id/bmpShort"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp"
        android:text="Heart rate:" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View results"
        android:textAllCaps="false"
        android:background="#58ACFA"
        android:padding="10dp"
        android:id="@+id/goToResultsShortButton"
        android:layout_below="@+id/startTimerButtonShort"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:onClick="launchResults"/>
</RelativeLayout>
