<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.naomitaub.standuptest" >

    //For Parse
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".ApplicationContextProvider"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".CreateAccountActivity"
            android:label="@string/title_activity_create_account" >
            <intent-filter>
                <action android:name="android.intent.action.CREATEACCOUNT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EnterInfoActivity"
            android:label="@string/title_activity_enter_info" >
        </activity>
        <activity
            android:name=".TestsActivity"
            android:label="@string/title_activity_tests" >
        </activity>

        <activity
            android:name=".ShortTestActivity"
            android:label="@string/title_activity_short_test"
            android:parentActivityName=".TestsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.naomitaub.standuptest.TestsActivity" />
        </activity>
        <activity
            android:name=".MediumTestActivity"
            android:label="@string/title_activity_medium_test">
            <intent-filter>
                <action android:name="android.intent.action.MEDIUMTESTACTIVITY" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LongTestActivity"
            android:label="@string/title_activity_long_test">
            <intent-filter>
                <action android:name="android.intent.action.LONGTESTACTIVITY" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ResultsActivity"
            android:label="@string/title_activity_results" >
        </activity>
        <activity
            android:name=".SymptomsActivity"
            android:label="@string/title_activity_symptoms" >
        </activity>
        <activity
            android:name=".PreviousTestsActivity"
            android:label="@string/title_activity_previous_tests" >
        </activity>
    </application>

</manifest>
